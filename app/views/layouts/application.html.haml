!!!
%html
  %head
    %title MealPlanner
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} WorkoutChef
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          - if !current_user
            %ul.nav.navbar-nav.navbar
              %li
                %a{:href => "#"} Features
              %li
                %a{:href => "#"} Pricing
            %ul.nav.navbar-nav.navbar-right
              %li
                = link_to "Sign up/Login with Facebook", user_facebook_omniauth_authorize_path
          - else
            %ul.nav.navbar-nav.navbar-right
              %li
                = link_to "Dashboard", '#'
              %li
                = link_to "Food", '#'
              %li
                = link_to "Exercise", '#'
              %li
                = link_to "Progress", '#'
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  = current_user.name
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to "Account Settings", "#"
                  %li
                    = link_to "Logout", destroy_user_session_path


    - if flash.count > 0
      .alert.alert-dismissible.alert-warning
        %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
        %p
          = flash[:notice]
          = flash[:success]
          = flash[:error]
    = yield
  = render "dashboard/infomodal"
